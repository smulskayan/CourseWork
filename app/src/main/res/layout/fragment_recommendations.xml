<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/recommendationsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Рекомендации на день"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/water_consumed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Выпито воды: 0 мл"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/recommendationsTitle"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/water_remaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Осталось воды: 0 мл"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/water_consumed"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/calories_consumed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Потреблено калорий: 0"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/water_remaining"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/calories_remaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Осталось калорий: 0"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/calories_consumed"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/protein_consumed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Белки: 0 г"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/calories_remaining"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/fat_consumed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Жиры: 0 г"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/protein_consumed"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/carbs_consumed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Углеводы: 0 г"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/fat_consumed"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>